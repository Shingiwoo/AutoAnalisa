# BACKEND
APP_ENV=local
SECRET_KEY=dev-secret
REQUIRE_LOGIN=true
SQLITE_URL=sqlite+aiosqlite:///./app.db
# Optional: override DB with MySQL/Postgres via DATABASE_URL
# Examples:
# DATABASE_URL=mysql+aiomysql://user:pass@localhost:3306/autoanalisa
# DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/autoanalisa
DATABASE_URL=
REDIS_URL=redis://localhost:6379/0
BINANCE_SANDBOX=false
USE_LLM=false
# Comma-separated allowed origins when APP_ENV != local (e.g. https://webanalisa.appshin.xyz)
CORS_ORIGINS=*
# Allow public registration (admin can toggle in-app)
REGISTRATION_ENABLED=true

# AUTH
JWT_SECRET=ubah-ini-yang-panjang
JWT_EXPIRE_MINUTES=43200
JWT_EXPIRE_MIN=43200

# LLM Budget & Harga
OPENAI_INPUT_USD_PER_1K=0.005
OPENAI_OUTPUT_USD_PER_1K=0.015
LLM_BUDGET_MONTHLY_USD=20
LLM_AUTO_OFF_AT_BUDGET=true

# Backend (FastAPI)
GPT_TTL_SCALPING_SECONDS=7200
GPT_TTL_SWING_SECONDS=43200
# Opsional: kalau mau sampai 1 hari untuk swing
# GPT_TTL_SWING_SECONDS=86400

# Frontend (NEXT_PUBLIC untuk fallback lokal)
NEXT_PUBLIC_GPT_TTL_SCALPING_SECONDS=7200
NEXT_PUBLIC_GPT_TTL_SWING_SECONDS=43200


# FRONTEND
# Boleh berisi base tanpa /api atau dengan /api (interceptor akan menormalkan)
# Contoh production: https://webanalisa.appshin.xyz
# Contoh dev (backend di 8940): http://localhost:8940
NEXT_PUBLIC_API_BASE=http://localhost:8940
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5
LLM_TIMEOUT_S=25
LLM_CACHE_TTL_S=900
