[Unit]
Description=Auto Analisa Web - Backend (Uvicorn)
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/auto-analisa-web/backend
Environment=PYTHONUNBUFFERED=1
Environment=APP_ENV=prod
EnvironmentFile=/opt/auto-analisa-web/.env
ExecStart=/opt/auto-analisa-web/backend/.venv/bin/uvicorn app.main:app --host 127.0.0.1 --port 8000
Restart=always
RestartSec=5
TimeoutStartSec=30

[Install]
WantedBy=multi-user.target

